{
    "name": "nxt-components",
    "version": "0.0.0",
    "private": true,
    "repository": "https://github.com/Liquid-JS/nxt-components.git",
    "author": "HitkoDev <development@hitko.si>",
    "license": "MIT",
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "postinstall": "husky install",
        "build": "yarn workspaces foreach --exclude demo run build",
        "build:demo": "yarn workspace demo build",
        "serve": "yarn workspace demo serve",
        "watch": "yarn workspaces foreach --exclude demo -p run watch",
        "test": "yarn workspaces foreach run test",
        "lint": "yarn workspaces foreach run lint",
        "lint:fix": "yarn workspaces foreach run lint:fix",
        "lint:html": "yarn workspaces foreach run lint:html",
        "lint:sass": "yarn workspaces foreach run lint:sass",
        "lint:sass:fix": "yarn workspaces foreach run lint:sass:fix",
        "docs": "yarn workspaces foreach run docs && yarn workspaces foreach run docs:json",
        "pages": "rimraf docs && yarn docs && yarn build:demo --base-href /nxt-components/demo/ && yarn scripts:add404",
        "pages:publish": "yarn pages && ngh --dir docs",
        "scripts:add404": "node --loader ts-node/esm scripts/add-404.ts",
        "release": "lerna version --ignore-changes 'packages/demo/**'"
    },
    "dependencies": {
        "@angular/animations": "^15.2.4",
        "@angular/cdk": "^15.2.4",
        "@angular/common": "^15.2.4",
        "@angular/compiler": "^15.2.4",
        "@angular/core": "^15.2.4",
        "@angular/forms": "^15.2.4",
        "@angular/localize": "^15.2.4",
        "@angular/platform-browser": "^15.2.4",
        "dropzone": "^6.0.0-beta.2",
        "moment": "^2.29.4",
        "rxjs": "^7.8.0",
        "sortablejs": "^1.15.0",
        "tslib": "^2.5.0",
        "zone.js": "^0.13.0"
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "^15.0.0",
        "@angular-devkit/architect": "^0.1502.4",
        "@angular-devkit/build-angular": "^15.2.4",
        "@angular-devkit/core": "^15.2.4",
        "@angular-devkit/schematics": "^15.2.4",
        "@angular-eslint/builder": "^15.2.1",
        "@angular-eslint/eslint-plugin": "^15.2.1",
        "@angular-eslint/eslint-plugin-template": "^15.2.1",
        "@angular-eslint/schematics": "^15.2.1",
        "@angular-eslint/template-parser": "^15.2.1",
        "@angular/cli": "^15.2.4",
        "@angular/compiler-cli": "^15.2.4",
        "@commitlint/cli": "^17.5.0",
        "@commitlint/config-conventional": "^17.4.4",
        "@compodoc/compodoc": "^1.1.19",
        "@types/diacritics": "^1.3.1",
        "@types/jasmine": "^4.3.1",
        "@types/node": "<19.0.0",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "angular-cli-ghpages": "1.0.5",
        "commitlint-plugin-workspace-scopes": "^1.1.0",
        "conventional-changelog-cli": "^2.2.2",
        "cross-env": "^7.0.3",
        "eslint": "^8.36.0",
        "eslint-plugin-deprecation": "^1.3.3",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^40.1.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^8.0.3",
        "image-minimizer-webpack-plugin": "^3.8.2",
        "imagemin": "^8.0.1",
        "imagemin-gif2webp": "^3.0.0",
        "imagemin-webp": "^8.0.0",
        "jasmine-core": "^4.6.0",
        "js-beautify": "^1.14.7",
        "karma": "^6.4.1",
        "karma-chrome-launcher": "^3.1.1",
        "karma-coverage": "^2.2.0",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.0.0",
        "lerna": "^6.6.0",
        "ng-packagr": "^15.2.2",
        "npm-check-updates": "^16.8.0",
        "postcss": "^8.4.21",
        "rimraf": "^4.4.1",
        "stylelint": "<15.0.0",
        "stylelint-config-standard-scss": "<7.0.0",
        "ts-node": "^10.9.1",
        "typedoc": "^0.23.28",
        "typescript": ">=4.9 <4.10",
        "webpack-image-resize-loader": "^5.0.0"
    },
    "packageManager": "yarn@3.4.1"
}
