{
    "name": "nxt-components",
    "version": "0.0.0",
    "private": true,
    "repository": "https://github.com/Liquid-JS/nxt-components.git",
    "author": "HitkoDev <development@hitko.si>",
    "license": "MIT",
    "type": "module",
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "postinstall": "husky install",
        "build": "yarn workspaces foreach -viptA --exclude demo run build",
        "build:demo": "yarn workspace demo build --base-href /nxt-components/demo/ --deploy-url /nxt-components/demo/",
        "serve": "yarn workspace demo serve",
        "watch": "yarn workspaces foreach -vipA -j unlimited --exclude demo run watch",
        "test": "yarn workspaces foreach -vipA -j unlimited run test",
        "lint": "yarn workspaces foreach -vipA -j unlimited run lint",
        "lint:fix": "yarn workspaces foreach -vipA -j unlimited run lint:fix",
        "lint:html": "yarn workspaces foreach -vipA -j unlimited run lint:html",
        "lint:sass": "yarn workspaces foreach -vipA -j unlimited run lint:sass",
        "lint:sass:fix": "yarn workspaces foreach -vipA -j unlimited run lint:sass:fix",
        "docs": "yarn workspaces foreach -vipA -j unlimited run docs && yarn workspaces foreach -vipA -j unlimited run docs:json",
        "pages": "rimraf docs && yarn docs && yarn build:demo && yarn scripts:add404 && ngx-sitemap ./docs/demo https://liquid-js.github.io/nxt-components/demo",
        "pages:publish": "yarn pages && ngh --dir docs",
        "scripts:add404": "node --loader ts-node/esm scripts/add-404.ts",
        "scripts:min-version": "node --loader ts-node/esm scripts/min-version.ts"
    },
    "dependencies": {
        "@angular/animations": "^19.0.1",
        "@angular/cdk": "^19.0.1",
        "@angular/common": "^19.0.1",
        "@angular/compiler": "^19.0.1",
        "@angular/core": "^19.0.1",
        "@angular/forms": "^19.0.1",
        "@angular/localize": "^19.0.1",
        "@angular/platform-browser": "^19.0.1",
        "@angular/platform-server": "^19.0.1",
        "dropzone": "^6.0.0-beta.2",
        "moment": "^2.30.1",
        "rxjs": "^7.8.1",
        "sortablejs": "^1.15.6",
        "tslib": "^2.8.1",
        "zone.js": "^0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/architect": "^0.1900.2",
        "@angular-devkit/build-angular": "^19.0.2",
        "@angular-devkit/core": "^19.0.2",
        "@angular-devkit/schematics": "^19.0.2",
        "@angular/cli": "^19.0.2",
        "@angular/compiler-cli": "^19.0.1",
        "@commitlint/cli": "^19.6.0",
        "@commitlint/config-conventional": "^19.6.0",
        "@compodoc/compodoc": "^1.1.26",
        "@lerna-lite/cli": "^3.10.1",
        "@lerna-lite/version": "^3.10.1",
        "@liquid-js/angular-cli-ghpages": "^2.0.4",
        "@liquid-js/commitlint-plugin-workspace-scopes": "^2.0.0",
        "@stylistic/eslint-plugin": "^2.11.0",
        "@types/jasmine": "^5.1.5",
        "@types/node": "<23.0.0",
        "@types/semver": "^7.5.8",
        "angular-eslint": "19.0.0",
        "conventional-changelog-cli": "^5.0.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.16.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsdoc": "^50.6.0",
        "eslint-plugin-prefer-arrow-functions": "^3.4.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "globby": "^14.0.2",
        "husky": "^9.1.7",
        "jasmine-core": "^5.4.0",
        "js-beautify": "^1.15.1",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage": "^2.2.1",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "ng-packagr": "^19.0.1",
        "ngx-sitemap": "^1.0.0",
        "npm-check-updates": "^17.1.11",
        "postcss": "^8.4.49",
        "rimraf": "^6.0.1",
        "semver": "^7.6.3",
        "stylelint": "<15.0.0",
        "stylelint-config-standard-scss": "<7.0.0",
        "ts-node": "^10.9.2",
        "typedoc": "^0.27.2",
        "typescript": ">=5.5 <5.7",
        "typescript-eslint": "^8.16.0"
    },
    "packageManager": "yarn@4.5.3",
    "resolutions": {
        "@angular-devkit/architect": "^0.1900.2",
        "@angular-devkit/build-angular": "^19.0.2",
        "@angular-devkit/core": "^19.0.2",
        "@angular-devkit/schematics": "^19.0.2",
        "@angular/cli": "^19.0.2",
        "@angular/compiler-cli": "^19.0.1",
        "@angular/animations": "^19.0.1",
        "@angular/cdk": "^19.0.1",
        "@angular/common": "^19.0.1",
        "@angular/compiler": "^19.0.1",
        "@angular/core": "^19.0.1",
        "@angular/forms": "^19.0.1",
        "@angular/localize": "^19.0.1",
        "@angular/platform-browser": "^19.0.1",
        "@angular/platform-server": "^19.0.1",
        "@angular/router": "^19.0.1"
    }
}
