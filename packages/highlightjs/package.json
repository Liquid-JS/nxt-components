{
    "name": "nxt-highlightjs",
    "description": "Angular code highlighting directives with optional line numbers and support for SSR",
    "bugs": "https://github.com/Liquid-JS/nxt-components/issues",
    "version": "21.0.0-alpha.1",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Liquid-JS/nxt-components.git"
    },
    "homepage": "https://github.com/Liquid-JS/nxt-components/tree/master/packages/highlightjs",
    "keywords": [
        "nxt-highlightjs",
        "ng-highlightjs",
        "angular",
        "highlight",
        "highlightjs",
        "prism",
        "syntax",
        "code",
        "gist"
    ],
    "scripts": {
        "watch": "ng build highlightjs --configuration \"development\" --watch",
        "build": "ng build highlightjs --configuration \"production\"",
        "lint": "ng lint highlightjs",
        "lint:fix": "yarn lint --fix",
        "lint:html": "js-beautify --type html -r -f ./src/**/*.html --config ./js-beautify.json",
        "_lint:sass": "stylelint \"src/**/*.scss\" \"assets/**/*.scss\"",
        "_lint:sass:fix": "yarn lint:sass --fix",
        "test": "ng test highlightjs --no-watch",
        "test:watch": "ng test highlightjs",
        "docs": "npx compodoc -c .compodocrc.json",
        "docs:json": "yarn docs --exportFormat json --output ../demo/src/app/highlightjs"
    },
    "peerDependencies": {
        "@angular/cdk": "^21.0.0",
        "@angular/common": "^21.0.0",
        "@angular/core": "^21.0.0",
        "@angular/platform-browser": "^21.0.0",
        "highlight.js": ">=11.11.1",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@types/trusted-types": "^2.0.7"
    }
}
